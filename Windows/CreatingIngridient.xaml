<Window x:Class="Restoraunt.Windows.CreatingIngridient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restoraunt.Windows"
        mc:Ignorable="d"
        Title="CreatingIngridient" Height="229" Width="277">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название" Margin="5"/>
            <TextBox x:Name="NameTextBox" Margin="5"/>

            <TextBlock Text="Калории" Margin="5"/>
            <TextBox x:Name="CaloriesTextBox" Margin="5"/>

            <TextBlock Text="Вес" Margin="5"/>
            <TextBox x:Name="WeightTextBox" Margin="5"/>

            <Button Content="Добавить" Click="AddButton_Click" Margin="5" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
